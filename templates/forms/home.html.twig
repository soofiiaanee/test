{% extends 'base.html.twig' %}

{% block title %}
    Accueil
{% endblock %}

{% block css %}
{% endblock css %}

{% block body %}
    <div class="container mt-3">
        <div class="row">
            <div class="col-md-12">
                {%include 'forms/menu.html.twig'%}
            </div>
        </div>
            
        <div class="jumbotron row mt-3">
            <div class="col-md-12">
                <h1 class="mt-3" id="typography">Recherche</h1>
                {{ form_start(form) }}
                
                <div class="form-group row justify-content-center">
                    <label class="col-md-2 col-form-label">Marque</label>
                    <div class="col-md-3">
                        {{ form_widget(form.marque) }}
                    </div>
                </div>
                                
                <div class="form-group row justify-content-center">
                    <label class="col-md-2 col-form-label">Region</label>
                    <div class="col-md-3">
                        {{ form_widget(form.region) }}
                    </div>
                </div>
                
                <div class="form-group row justify-content-center">
                    <div class="col-md-3">
                        {{form_row(form.rechercher)}}
                    </div>
                </div>

                {{ form_end(form) }}
            </div>
        </div>
    </div>
    
{% endblock %}

{% block js %}
{% endblock js%}