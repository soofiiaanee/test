{% block body %}
    <div class="container mt-3">
        <div class="row">
            <div class="col-md-12">
                {%include 'forms/menu.html.twig'%}
            </div>
        </div>
            
        <div class="row mt-5">
            <div class="col-md-4">
                <div class="card text-white bg-primary mb-3" style="max-width: 20rem;">
                    <div class="card-header">Nom Complet</div>
                    <div class="card-body">
                      <h4 class="card-title">{{app.user.firstName}} {{app.user.lastName}}</h4>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-white bg-primary mb-3" style="max-width: 20rem;">
                    <div class="card-header">Email</div>
                    <div class="card-body">
                      <h4 class="card-title">{{app.user.email}}</h4>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-white bg-primary mb-3" style="max-width: 20rem;">
                    <div class="card-header">TÃ©l</div>
                    <div class="card-body">
                      <h4 class="card-title">{{app.user.tel}}</h4>
                    </div>
                </div>
            </div>
        </div>
    </div>
                    
    <div class="container justify-content-center">
        <h1>Favoris</h1>
        <div class="row">
            {% for voiture in app.user.voitures%}
            <div class="col-md-4">
                <div class="jumbotron">
                    <p class="lead">{{voiture.modele.marque.marque}}- {{voiture.modele.modele}}</p>
                    <hr class="my-4">
                    <p class="lead">
                      <a class="btn btn-danger btn-lg" href="{{path('supprimerVoiture',{id:voiture.id})}}">Retirer</a>
                    </p>
                  </div>
            </div>
            {% endfor %}
        </div>
            

    </div>
    
